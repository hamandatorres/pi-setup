server {
    server_name chavezperez.com www.chavezperez.com;
    root /var/www/html;
    index index.php index.html;
    
    location / {
        try_files $uri $uri.html $uri/ =404;
    }
    
    location = /webhook.php {
        allow 140.82.112.0/20;  # GitHub's IP range
        deny all;
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
    }
    
    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
    }
    
    # Proxy Node.js app
    location /nodeapp/ {
        proxy_pass http://localhost:3000/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
    
    # Proxy .NET app
    location /dotnet/ {
        proxy_pass http://localhost:5000/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
    
    error_page 404 /404.html;
    location = /404.html {
        root /var/www/html;
        internal;
    }
    
    listen [::]:443 ssl ipv6only=on;
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/chavezperez.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/chavezperez.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;
}
